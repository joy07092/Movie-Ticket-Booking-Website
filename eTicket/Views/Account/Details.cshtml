@using eTicket.Data.ViewModels;
@model RegisterVM;

@{
    ViewData["Title"] = "Profile Details";
}

<div class="card" style="width: 600px; max-width: 100%; background-color: #fff; margin-left: 400px; margin-top: 80px">
    <div class="card-header" style="background-color: black">
        <h4 class="text-center" style="color: white">Profile Details</h4>
    </div>
    @if (TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"] </span>
        </div>
    }

    <div class="card-body">

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" readonly />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-outline-success" asp-controller="Movies" asp-action="Index">Go to Home</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>